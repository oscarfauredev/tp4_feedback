{% extends 'base.html.twig' %}

{% block title %}Feedback Result{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('path/to/bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Feedback Result</h1>

        <h3>Produit sélectionné : {{ product.name }} - {{ product.price }} €</h3>

        <div class="card mb-4">
            <div class="card-body">
                <p class="card-text"><strong>Nom du client:</strong> {{ feedback.nomClient }}</p>
                <p class="card-text"><strong>Email du client:</strong> {{ feedback.emailClient }}</p>
                <p class="card-text"><strong>Note du produit:</strong> {{ feedback.noteProduit }}</p>
                <p class="card-text"><strong>Commentaires:</strong> {{ feedback.commentaires }}</p>
                <p class="card-text"><strong>Date de soumission:</strong> {{ feedback.dateSoumission ? feedback.dateSoumission.format('Y-m-d') : 'N/A' }}</p>
            </div>
        </div>

        <a href="{{ path('product_list') }}" class="btn btn-primary">Retour à la liste des produits</a>
    </div>
{% endblock %}
